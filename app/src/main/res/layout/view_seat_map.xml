<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/header_plane_imageview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/header_plane_a320_background"
        android:contentDescription="@null"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/body_seat_views_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/footer_plane_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/footer_plane_321_background"
        android:contentDescription="@null"
        android:orientation="vertical"/>

</LinearLayout>